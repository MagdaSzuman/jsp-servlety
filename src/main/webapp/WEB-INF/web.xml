<web-app>
    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>com.sda.servlets.HomeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CalculatorServlet</servlet-name>
        <servlet-class>com.sda.servlets.CalculatorServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LinkServlet</servlet-name>
        <servlet-class>com.sda.servlets.LinkServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/hello-world</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CalculatorServlet</servlet-name>
        <url-pattern>/calculator</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LinkServlet</servlet-name>
        <url-pattern>/link</url-pattern>
    </servlet-mapping>
</web-app>